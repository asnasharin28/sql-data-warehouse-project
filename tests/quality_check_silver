/* 
============================================================
QUALITY CHECK SCRIPT: Silver Layer
------------------------------------------------------------
Purpose:
 - Validate data consistency, cleanliness, and correctness
   after loading the Silver layer.
 - Detect:
      • Null or duplicate primary keys
      • Unwanted spaces in string fields
      • Incorrect formats or invalid values
      • Invalid date ranges and ordering
      • Standardization and business rule inconsistencies

Execution Notes:
 - Run this script AFTER: EXEC silver.load_silver;
 - Each section corresponds to one Silver table.
 - No updates or deletes are performed; only checks.
 - Investigate any rows returned by these queries.

============================================================
*/


/* ============================================================
   QUALITY CHECK: silver.crm_cust_info
   ============================================================ */

------------------------------------------------------------
-- Check 1: Nulls or Duplicate cst_id
-- Expectation: No Results
------------------------------------------------------------
SELECT 
    cst_id,
    COUNT(*) AS cnt
FROM silver.crm_cust_info
GROUP BY cst_id
HAVING COUNT(*) > 1 OR cst_id IS NULL;

------------------------------------------------------------
-- Check 2: Unwanted Spaces
-- Expectation: No Results
------------------------------------------------------------
SELECT 
    cst_key
FROM silver.crm_cust_info
WHERE cst_key <> TRIM(cst_key);

------------------------------------------------------------
-- Check 3: Data Standardization (Marital Status)
-- Expectation: Only: Married, Single, n/a
------------------------------------------------------------
SELECT DISTINCT 
    cst_marital_status
FROM silver.crm_cust_info;




/* ============================================================
   QUALITY CHECK: silver.crm_prd_info
   ============================================================ */

------------------------------------------------------------
-- Check 1: Nulls or Duplicate prd_id
-- Expectation: No Results
------------------------------------------------------------
SELECT 
    prd_id,
    COUNT(*) AS cnt
FROM silver.crm_prd_info
GROUP BY prd_id
HAVING COUNT(*) > 1 OR prd_id IS NULL;

------------------------------------------------------------
-- Check 2: Unwanted Spaces
-- Expectation: No Results
------------------------------------------------------------
SELECT 
    prd_nm
FROM silver.crm_prd_info
WHERE prd_nm <> TRIM(prd_nm);

------------------------------------------------------------
-- Check 3: Invalid or Null Product Costs
-- Expectation: No Results
------------------------------------------------------------
SELECT 
    prd_cost
FROM silver.crm_prd_info
WHERE prd_cost < 0 
   OR prd_cost IS NULL;

------------------------------------------------------------
-- Check 4: Data Standardization (Product Line)
-- Expectation: Mountain, Road, Other Sales, Touring, n/a
------------------------------------------------------------
SELECT DISTINCT 
    prd_line
FROM silver.crm_prd_info;

------------------------------------------------------------
-- Check 5: Invalid Date Orders (End Date < Start Date)
-- Expectation: No Results
------------------------------------------------------------
SELECT 
    *
FROM silver.crm_prd_info
WHERE prd_end_dt < prd_start_dt;




/* ============================================================
   QUALITY CHECK: silver.crm_sales_details
   ============================================================ */

------------------------------------------------------------
-- Check 1: Invalid Dates in Raw Source (Bronze Layer)
-- Expectation: No Results
------------------------------------------------------------
SELECT 
    NULLIF(sls_due_dt, 0) AS sls_due_dt
FROM bronze.crm_sales_details
WHERE sls_due_dt <= 0 
   OR LEN(sls_due_dt) != 8 
   OR sls_due_dt > 20500101 
   OR sls_due_dt < 19000101;

------------------------------------------------------------
-- Check 2: Invalid Date Ordering
-- Expectation: No Results
------------------------------------------------------------
SELECT 
    *
FROM silver.crm_sales_details
WHERE sls_order_dt > sls_ship_dt 
   OR sls_order_dt > sls_due_dt;

------------------------------------------------------------
-- Check 3: Sales Calculation Consistency
-- Expectation: No Results
------------------------------------------------------------
SELECT DISTINCT 
    sls_sales,
    sls_quantity,
    sls_price
FROM silver.crm_sales_details
WHERE sls_sales <> sls_quantity * sls_price
   OR sls_sales IS NULL 
   OR sls_quantity IS NULL 
   OR sls_price IS NULL
   OR sls_sales <= 0 
   OR sls_quantity <= 0 
   OR sls_price <= 0
ORDER BY sls_sales, sls_quantity, sls_price;




/* ============================================================
   QUALITY CHECK: silver.erp_cust_az12
   ============================================================ */

------------------------------------------------------------
-- Check 1: Out-of-Range Birthdates
-- Expectation: Valid bdate between 1924-01-01 and today
------------------------------------------------------------
SELECT DISTINCT 
    bdate
FROM silver.erp_cust_az12
WHERE bdate < '1924-01-01' 
   OR bdate > GETDATE();

------------------------------------------------------------
-- Check 2: Standardized Gender Values
-- Expectation: Male, Female, n/a
------------------------------------------------------------
SELECT DISTINCT 
    gen
FROM silver.erp_cust_az12;




/* ============================================================
   QUALITY CHECK: silver.erp_loc_a101
   ============================================================ */

------------------------------------------------------------
-- Check 1: Country Standardization
-- Expectation: DE → Germany, US/USA → United States, n/a
------------------------------------------------------------
SELECT DISTINCT 
    cntry
FROM silver.erp_loc_a101
ORDER BY cntry;




/* ============================================================
   QUALITY CHECK: silver.erp_px_cat_g1v2
   ============================================================ */

------------------------------------------------------------
-- Check 1: Unwanted Spaces in Category Fields
-- Expectation: No Results
------------------------------------------------------------
SELECT 
    *
FROM silver.erp_px_cat_g1v2
WHERE cat <> TRIM(cat)
   OR subcat <> TRIM(subcat)
   OR maintenance <> TRIM(maintenance);

------------------------------------------------------------
-- Check 2: Standardization (Maintenance Category)
-- Expectation: Only valid maintenance codes
------------------------------------------------------------
SELECT DISTINCT 
    maintenance
FROM silver.erp_px_cat_g1v2;
